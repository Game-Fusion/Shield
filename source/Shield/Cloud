os.loadAPI("/Shield/APIs/denver") -- just making sure

local function cloudTitle()
  denver.clrBg("green")
  denver.setTxt("white")
  denver.center(1,"Revolution Cloud")
  denver.clrBg("white")
  denver.clrLine(2)
  denver.setBg("green")
end
gridTitle()
 
denver.center(4,"Welcome to Revolution Cloud!")
denver.center(5,"This is Revolution's game streaming")
denver.center(6,"service. You can stream great games straight")
denver.center(7,"to your Shield!")
sleep(2.5)

local function drawCloudMenu()
  cloudTitle()
  denver.setTxt("white")
  denver.center(2,"Select a Game:")
  denver.center(4,"* Laser Blast")
  denver.center(6,"* BATTLE")
  denver.center(8,"* Solitaire")
  denver.center(10,"* TRON")
  denver.center(12,"* Skyfall")
  denver.center(14,"* CC Sand")
  denver.center(17,"Click here to Exit")
end
drawCloudMenu()
 
while true do
  local evt, button, x, y = os.pullEvent("mouse_click")
if y == 4 then
  shell.run("pastebin run uBfD8SAe")
  drawCloudMenu()
elseif y == 6 then
  shell.run("pastebin run MbvMiiCU")
  drawCloudMenu()
elseif y == 8 then
  shell.run("pastebin run wg6xLisV")
  drawCloudMenu()
elseif y == 10 then
  shell.run("pastebin run fuL9BpjX")
  drawCloudMenu()
elseif y == 12 then
  shell.run("pastebin run mjyCbPks")
  drawCloudMenu()
elseif y == 14 then
  shell.run("pastebin run RbKvzJqp")
  drawCloudMenu()
elseif y == 17 then
  shell.run("/startup")
else end
end
